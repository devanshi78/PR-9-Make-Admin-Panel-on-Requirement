<%- include('../partials/header.ejs') %>

<style>
  body {
    background: #eef1f6;
    font-family: "Inter", sans-serif;
  }

  .profile-wrapper {
    max-width: 650px;
    margin-top: 40px;
    margin-bottom: 40px;
    margin-left: auto;
  }

  .profile-card {
    background: #fff;
    border-radius: 22px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0,0,0,0.07);
  }

  /* Top gradient header */
  .profile-header {
    padding: 25px;
    display: flex;
    align-items: center;
    gap: 18px;
    background: linear-gradient(135deg, #6ea7ff, #9773ff);
    color: #fff;
  }

  .profile-header img {
    height: 65px;
    width: 65px;
    border-radius: 12px;
    object-fit: cover;
  }

  .profile-header .name {
    font-size: 20px;
    font-weight: 700;
  }

  .profile-header .email {
    font-size: 14px;
    opacity: 0.9;
  }

  /* Info list */
  .info-section {
    padding: 25px;
  }

  .info-item {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid #f1f1f1;
  }

  .info-label {
    color: #6b7280;
    font-weight: 500;
  }

  .info-value {
    color: #111;
    font-weight: 600;
    text-align: right;
  }

  .about-box {
    background: #f7f8fa;
    padding: 15px;
    border-radius: 12px;
    margin: 12px 0;
    color: #4b5563;
    font-size: 14px;
  }

  .update-btn {
    background:#4f46e5;
    color:#fff !important;
    border:none;
    padding:12px 26px;
    border-radius:12px;
    font-weight:600;
    float:right;
    margin:20px 25px;
    transition:0.3s ease;
  }

  .update-btn:hover {
    background:#4338ca;
    transform: translateY(-2px);
  }
</style>

<div class="row justify-content-center">
  <div class="col-md-7">
    <div class="profile-wrapper">
      <div class="profile-card">

        <!-- Header -->
        <div class="profile-header">
          <img src="/uploads/<%= user.image %>">
          <div>
            <div class="name"><%= user.fullname %></div>
            <div class="email"><%= user.email %></div>
          </div>
        </div>

        <!-- Info Section -->
        <div class="info-section">

          <div class="info-item">
            <span class="info-label">Username</span>
            <span class="info-value"><%= user.username %></span>
          </div>

          <div class="info-item">
            <span class="info-label">Mobile Number</span>
            <span class="info-value"><%= user.mobileNo %></span>
          </div>

          <div class="info-item">
            <span class="info-label">Address</span>
            <span class="info-value"><%= user.address %></span>
          </div>

          <div class="info-item">
            <span class="info-label">DOB</span>
            <span class="info-value"><%= user.DOB %></span>
          </div>

          <div class="info-label mt-3">About</div>
          <div class="about-box">
            <%= user.bio %>
          </div>

        </div>

        <!-- Button -->
        <a href="/edit-user/<%= user.id %>" class="update-btn">Update</a>
        <div style="clear: both;"></div>

      </div>
    </div>
  </div>
</div>

    <%- include('../partials/footer.ejs') %>